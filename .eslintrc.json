{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"no-undef": 0,
		"no-shadow": "off",
		"no-else-return": "error",
		"no-empty": "error",
		"no-lonely-if": "error"
	}
}